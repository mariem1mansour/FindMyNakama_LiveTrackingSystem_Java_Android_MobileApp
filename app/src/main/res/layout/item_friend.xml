<?xml version="1.0" encoding="utf-8"?>
<!-- LAYOUT POUR UN ÉLÉMENT DANS LA LISTE DES AMIS -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- NOM DE L'AMI -->
        <TextView
            android:id="@+id/friendNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nom de l'ami"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/deleteFriendButton" />

        <!-- EMAIL DE L'AMI -->
        <TextView
            android:id="@+id/friendEmailTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/friendNameTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/deleteFriendButton" />

        <!-- STATUT DE PARTAGE -->
        <TextView
            android:id="@+id/friendStatusTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Partage sa position"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/friendEmailTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/deleteFriendButton" />

        <!-- BOUTON SUPPRIMER -->
        <ImageButton
            android:id="@+id/deleteFriendButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Supprimer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/design_default_color_error" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>